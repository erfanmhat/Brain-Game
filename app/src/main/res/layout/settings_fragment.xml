<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="@dimen/setting_w_h"
    android:layout_height="@dimen/setting_w_h">

    <ImageView
        android:layout_width="@dimen/setting_w_h"
        android:layout_height="@dimen/setting_w_h"
        android:src="@drawable/rounded_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/music_image_view_button"
        android:layout_width="@dimen/image_view_button"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/audio_image_view_button"
        android:layout_height="@dimen/image_view_button"/>

    <ImageView
        android:id="@+id/audio_image_view_button"
        android:layout_width="@dimen/image_view_button"
        app:layout_constraintTop_toTopOf="@id/music_image_view_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/music_image_view_button"
        app:layout_constraintBottom_toBottomOf="@id/music_image_view_button"
        android:layout_height="@dimen/image_view_button"/>

    <ImageView
        android:id="@+id/close_image_view_button"
        android:layout_width="25dp"
        app:layout_constraintVertical_bias="0.07"
        android:src="@drawable/close_button"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="25dp"/>
    <ImageView
        android:id="@+id/how_to_do_image_view_button"
        android:layout_width="@dimen/settings_button_width"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/pink_button"
        android:layout_height="@dimen/settings_button_height"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/game_main_color"
        android:textSize="@dimen/settings_text_size"
        android:text="@string/how_to_do"
        app:layout_constraintTop_toTopOf="@id/how_to_do_image_view_button"
        app:layout_constraintLeft_toLeftOf="@id/how_to_do_image_view_button"
        app:layout_constraintRight_toRightOf="@id/how_to_do_image_view_button"
        app:layout_constraintBottom_toBottomOf="@id/how_to_do_image_view_button"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/about_us_image_view_button"
        android:layout_width="@dimen/settings_button_width"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/how_to_do_image_view_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/pink_button"
        android:layout_height="@dimen/settings_button_height"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/game_main_color"
        android:textSize="@dimen/settings_text_size"
        android:text="@string/about_us"
        app:layout_constraintTop_toTopOf="@id/about_us_image_view_button"
        app:layout_constraintLeft_toLeftOf="@id/about_us_image_view_button"
        app:layout_constraintRight_toRightOf="@id/about_us_image_view_button"
        app:layout_constraintBottom_toBottomOf="@id/about_us_image_view_button"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/quit_image_view_button"
        android:layout_width="@dimen/settings_button_width"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/about_us_image_view_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/pink_button"
        android:layout_height="@dimen/settings_button_height"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/game_main_color"
        android:textSize="@dimen/settings_text_size"
        android:text="@string/quit"
        app:layout_constraintTop_toTopOf="@id/quit_image_view_button"
        app:layout_constraintLeft_toLeftOf="@id/quit_image_view_button"
        app:layout_constraintRight_toRightOf="@id/quit_image_view_button"
        app:layout_constraintBottom_toBottomOf="@id/quit_image_view_button"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>