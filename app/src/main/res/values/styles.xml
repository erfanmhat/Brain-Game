<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/game_main_color</item>
        <item name="colorPrimaryDark">@color/game_main_color</item>
        <item name="colorAccent">@color/game_main_color</item>
    </style>

    <style name="game_levels">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="game_buttons">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:src">@drawable/rounded_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>
</resources>